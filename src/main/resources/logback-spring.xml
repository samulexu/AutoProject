<!--        <discardingThreshold>0</discardingThreshold>-->
<!--        <queueSize>10000</queueSize>-->
<!--        <appender-ref ref="error_log" />-->
<!--    </appender>-->
<!--    <appender name="info_async" class="ch.qos.logback.classic.AsyncAppender">-->
<!--        <discardingThreshold>0</discardingThreshold>-->
<!--        <queueSize>10000</queueSize>-->
<!--        <appender-ref ref="info_log" />-->
<!--    </appender>-->
<!--    <appender name="debug_async" class="ch.qos.logback.classic.AsyncAppender">-->
<!--        <discardingThreshold>0</discardingThreshold>-->
<!--        <queueSize>10000</queueSize>-->
<!--        <appender-ref ref="debug_log" />-->
<!--    </appender>-->

    <root level="ERROR">
        <appender-ref ref="error_log" />
    </root>
<!--  additivity="false"  -->
    <logger name="com.etrackhis" level="ERROR" >
        <appender-ref ref="error_log" />
    </logger>
    <logger name="com.etrackhis" level="INFO" >
        <appender-ref ref="info_log" />
    </logger>
    <logger name="com.etrackhis" level="DEBUG" >
        <appender-ref ref="debug_log" />
        <appender-ref ref="STDOUT" />
    </logger>


</configuration>